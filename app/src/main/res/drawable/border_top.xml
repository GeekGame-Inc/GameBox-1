        <shape>
            <padding
                android:top="1px"></padding>
            <solid android:color="@color/divider" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp">
        <shape>
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>