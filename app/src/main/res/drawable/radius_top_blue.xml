<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 连框颜色值 -->
    <item>
        <shape>
            <padding android:top="1px"></padding>
            <solid android:color="@color/blue_40" />
            <corners
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp"></corners>
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="0dp"
        android:left="1px"
        android:right="1px">
        <shape>
            <solid android:color="@color/blue_40" />
            <corners
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp"></corners>
        </shape>
    </item>
</layer-list>