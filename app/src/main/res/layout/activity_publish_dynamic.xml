<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />

    <com.tenone.gamebox.view.custom.CustomizeEditText
        android:id="@+id/id_publishDynamics_edit"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="left|top"
        android:hint="分享新鲜事..."
        android:padding="10dp"
        android:textColor="@color/black_33"
        android:textColorHint="@color/gray_9a"
        android:textSize="13sp" />

    <GridView
        android:id="@+id/id_publishDynamics_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:numColumns="4"
        android:padding="10dp"></GridView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="内容必须大于10个字并且配有图片或者gif"
        android:textColor="@color/red"
        android:textSize="12sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="建议上传单张图片大小不超过2M"
        android:textColor="@color/gray_9a"
        android:textSize="12sp" />
</LinearLayout>
