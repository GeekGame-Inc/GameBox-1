<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/divider"
        android:gravity="center_vertical|left"
        android:padding="5dp"
        android:text="温馨提示：侧滑删除消息"
        android:textColor="@color/gray_9a"
        android:textSize="12sp" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/id_message_list_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tenone.gamebox.view.custom.RemoveItemRecyclerView
            android:id="@+id/id_message_list_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.tenone.gamebox.view.custom.RemoveItemRecyclerView>

    </android.support.v4.widget.SwipeRefreshLayout>


</LinearLayout>