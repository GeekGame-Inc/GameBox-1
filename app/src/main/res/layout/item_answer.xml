<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp">

    <ImageView
        android:id="@+id/id_item_answer_header"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/ic_defult_header" />

    <TextView
        android:id="@+id/id_item_answer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/id_item_answer_header"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/id_item_answer_header"
        android:text="玩家名字"
        android:textColor="@color/defultTextColor"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/id_item_answer_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_item_answer_name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/id_item_answer_header"
        android:text="内容"
        android:textColor="@color/textColor1"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/id_item_answer_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/id_item_answer_content"
        android:layout_marginTop="10dp"
        android:text="时间"
        android:textColor="@color/defultTextColor"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/id_item_answer_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/id_item_answer_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_dynamic_top"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/id_item_answer_best"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/c_icon_zuijiahuida"
            android:visibility="gone" />

        <TextView
            android:id="@+id/id_item_answer_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/shape_login_bt"
            android:drawableLeft="@drawable/f_icon_jinbin_liang"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:paddingTop="2dp"
            android:text="+50"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone" />
    </LinearLayout>


</RelativeLayout>
