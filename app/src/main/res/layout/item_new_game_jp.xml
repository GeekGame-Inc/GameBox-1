<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_jp_game_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:id="@+id/id_jp_game_imgLayout"
        android:layout_width="70dp"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/id_jp_game_img"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_loading_logo"
            android:contentDescription="@string/empty"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/id_jp_game_dis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/c_icon_zhekoubiaoqian"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="gone" />
    </RelativeLayout>


    <TextView
        android:id="@+id/id_jp_game_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/id_jp_game_imgLayout"
        android:layout_alignRight="@id/id_jp_game_imgLayout"
        android:layout_below="@id/id_jp_game_imgLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/gray_69"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/id_jp_game_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/id_jp_game_imgLayout"
        android:layout_alignRight="@id/id_jp_game_imgLayout"
        android:layout_below="@id/id_jp_game_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:ellipsize="middle"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/defultTextColor"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/id_jp_game_welfare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/id_jp_game_imgLayout"
        android:layout_alignRight="@id/id_jp_game_imgLayout"
        android:layout_below="@id/id_jp_game_type"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:background="@drawable/radius_border_jp"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:textColor="@color/blue_40"
        android:textSize="10sp" />

</RelativeLayout>