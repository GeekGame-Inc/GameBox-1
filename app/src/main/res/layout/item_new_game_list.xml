<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/id_new_game_list_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        android:textColor="@color/black_33"
        android:textSize="15sp"
        android:visibility="gone" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="13dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="13dp">


        <ImageView
            android:id="@+id/id_new_game_list_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_loading_logo"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/id_new_game_list_gameName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/id_new_game_list_icon"
            android:ellipsize="end"
            android:gravity="left|top"
            android:maxLength="7"
            android:maxLines="1"
            android:textColor="@color/textColor1"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/id_new_game_list_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/id_new_game_list_gameName"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/id_new_game_list_gameName"
            android:background="@drawable/selector_operate_lable"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:visibility="gone"
            android:textColor="@color/operate_select_color"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/id_new_game_list_dis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/id_new_game_list_gameName"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/id_new_game_list_size"
            android:background="@drawable/shape_red"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textColor="@color/white"
            android:textSize="9sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/id_new_game_list_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/id_new_game_list_gameName"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/id_new_game_list_size"
            android:background="@drawable/radiu_today"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="今日首发"
            android:textColor="@color/purple_df4"
            android:textSize="12sp"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/id_new_game_list_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/selector_game_icon" />

        <TextView
            android:id="@+id/id_new_game_list_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_new_game_list_gameName"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/id_new_game_list_icon"
            android:textColor="@color/defultTextColor"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/id_new_game_list_welfare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/id_new_game_list_icon"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/id_new_game_list_icon"
            android:background="@drawable/shape_welfare"
            android:maxLength="20"
            android:paddingBottom="1dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="1dp"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <com.tenone.gamebox.view.custom.LableView
            android:id="@+id/id_new_game_list_lableView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/id_new_game_list_welfare"
            android:layout_below="@id/id_new_game_list_type"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@id/id_new_game_list_img"
            android:layout_toRightOf="@id/id_new_game_list_icon"
            android:gravity="center_vertical"></com.tenone.gamebox.view.custom.LableView>

    </RelativeLayout>
</LinearLayout>