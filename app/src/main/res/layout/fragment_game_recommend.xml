<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <com.tenone.gamebox.view.custom.RefreshLayout
        android:id="@+id/id_recommend_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.tenone.gamebox.view.custom.RecommendListView
            android:id="@+id/id_recommend_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@color/white"
            android:divider="@color/divider"
            android:dividerHeight="1dp"
            android:listSelector="@color/transparent" />
    </com.tenone.gamebox.view.custom.RefreshLayout>

    <ImageView
        android:id="@+id/id_recommend_customer"
        android:layout_margin="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/empty"
        android:src="@drawable/icon_kefu_ball" />

</RelativeLayout>