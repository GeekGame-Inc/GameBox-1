<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_item_trading_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/id_item_trading_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15585"
        android:textColor="@color/gray_9a"
        android:textSize="13sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/id_item_trading_img"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_banner_loading"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/id_item_trading_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/id_item_trading_img"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/id_item_trading_img"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="满星诸葛亮"
            android:textColor="@color/black_33"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/id_item_trading_gameName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/id_item_trading_img"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/id_item_trading_img"
            android:background="@drawable/radiu_border"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:textColor="@color/gray_9a"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/id_item_trading_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/id_item_trading_gameName"
            android:layout_below="@id/id_item_trading_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/id_item_trading_img"
            android:gravity="center_vertical"
            android:text="区服:5"
            android:textColor="@color/gray_9a"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/id_item_trading_platform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/id_item_trading_gameName"
            android:layout_below="@id/id_item_trading_name"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/id_item_trading_server"
            android:gravity="center_vertical"
            android:text="平台:安卓"
            android:textColor="@color/gray_9a"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/id_item_trading_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/id_item_trading_img"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="￥280"
            android:textColor="@color/red"
            android:textSize="16sp" />

    </RelativeLayout>
</LinearLayout>