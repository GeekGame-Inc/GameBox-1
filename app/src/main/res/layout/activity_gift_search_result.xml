<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dbd8"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/comm_search_titlebar" />

    <com.tenone.gamebox.view.custom.RefreshLayout
        android:id="@+id/id_giftSearchResult_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tenone.gamebox.view.custom.MyRefreshListView
            android:id="@+id/id_giftSearchResult_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@color/white"
            android:divider="@null"
            android:listSelector="@color/transparent" />
    </com.tenone.gamebox.view.custom.RefreshLayout>

</LinearLayout>