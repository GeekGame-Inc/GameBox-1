<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include layout="@layout/common_title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:background="@drawable/radiu_border" >

        <ImageView
            android:id="@+id/id_publish_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:contentDescription="@string/empty"
            android:src="@drawable/ic_camera" />

        <ImageView
            android:id="@+id/id_publish_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:contentDescription="@string/empty" />

        <com.tenone.gamebox.view.custom.CustomizeEditText
            android:id="@+id/id_publish_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/id_publish_image"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@id/id_publish_album"
            android:background="@color/white"
            android:gravity="top|left"
            android:hint="@string/commentHint"
            android:padding="5dp"
            android:textColorHint="@color/defultTextColor"
            android:textSize="12sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/id_publish_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:contentDescription="@string/empty"
        android:visibility="gone"
        android:src="@drawable/ic_add" 
        android:padding="10dp"
        android:background="@drawable/radiu_border"/>

</LinearLayout>