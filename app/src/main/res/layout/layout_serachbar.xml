<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_serachBar"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/id_main_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="7dp"
        android:contentDescription="@string/empty"
        android:src="@drawable/ic_xiazai" />

    <ImageView
        android:id="@+id/id_main_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="15dp"
        android:contentDescription="@string/empty"
        android:src="@drawable/ic_message" />

    <TextView
        android:id="@+id/id_main_search"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/id_main_message"
        android:layout_toRightOf="@id/id_main_down"
        android:background="@drawable/radiu_shape"
        android:drawableLeft="@drawable/icon_sousuo"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="@string/searchHint"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/id_main_messageBadge"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp" />

    <TextView
        android:id="@+id/id_main_downBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/id_main_search"
        android:textColor="@color/white" />

</RelativeLayout>