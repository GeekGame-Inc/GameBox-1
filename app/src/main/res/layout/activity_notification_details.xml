<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ede6e6"
        android:gravity="center_vertical|left"
        android:padding="5dp"
        android:text="温馨提示：侧滑删除消息"
        android:textColor="#afa3a3"
        android:textSize="12sp" />

    <com.tenone.gamebox.view.custom.swipemenulistview.SwipeMenuListView
        android:id="@+id/id_notification_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:cacheColorHint="@color/transparent"
        android:divider="@color/divider"
        android:dividerHeight="1px"
        android:listSelector="@color/transparent"
        android:scrollbars="none"></com.tenone.gamebox.view.custom.swipemenulistview.SwipeMenuListView>

</LinearLayout> 