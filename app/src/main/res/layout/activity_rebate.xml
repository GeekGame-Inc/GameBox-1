<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/layout_new_titlebar" />

    <com.tenone.gamebox.view.custom.MarqueeTextView
        android:id="@+id/id_rebate_marqueeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/divider" >
    </com.tenone.gamebox.view.custom.MarqueeTextView>

    <com.tenone.gamebox.view.custom.viewpagerindicator.TabPageIndicator
        android:id="@+id/id_rebate_tabPageIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.tenone.gamebox.view.custom.CustomerUnderlinePageIndicator
        android:id="@+id/id_rebate_underlineIndicator"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider" />

    <android.support.v4.view.ViewPager
        android:id="@+id/id_rebate_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>