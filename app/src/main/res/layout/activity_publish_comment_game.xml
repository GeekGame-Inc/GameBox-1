<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />

    <com.tenone.gamebox.view.custom.CustomizeEditText
        android:id="@+id/id_publishGame_editText"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/radiu_border"
        android:gravity="top|left"
        android:hint="@string/commentHint"
        android:padding="5dp"
        android:text="185sy良心平台,很不错的游戏"
        android:textColorHint="@color/defultTextColor"
        android:textSize="12sp" />
</LinearLayout>