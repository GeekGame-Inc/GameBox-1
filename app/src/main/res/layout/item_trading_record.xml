<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_item_trading_record_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:padding="15dp">

    <TextView
        android:id="@+id/id_item_trading_record_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:textColor="@color/black_33"
        android:textSize="15sp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/id_topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_item_trading_record_status">


        <TextView
            android:id="@+id/id_item_trading_record_gameName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/gray_69"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/id_item_trading_record_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/radius_border_kf"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:text="下架"
            android:textColor="@color/blue_40"
            android:textSize="15sp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/id_item_trading_record_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_topLayout"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/gray_69"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/id_item_trading_record_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_item_trading_record_title"
        android:layout_marginTop="10dp"
        android:textColor="@color/gray_69"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/id_item_trading_record_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/id_item_trading_record_money"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/id_item_trading_record_money"
        android:textColor="@color/gray_9a"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/id_item_trading_record_reson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_item_trading_record_money"
        android:layout_marginTop="10dp"
        android:textColor="@color/gray_69"
        android:textSize="12sp"
        android:visibility="gone" />

</RelativeLayout>
