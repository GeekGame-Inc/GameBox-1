<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />

    <EditText
        android:id="@+id/id_bind_mobileEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_bottom"
        android:hint="请输入要绑定的手机号"
        android:inputType="phone"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:textColor="@color/textColor1"
        android:textColorHint="@color/defultTextColor"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/border_bottom"
        android:padding="1dp">

        <TextView
            android:id="@+id/id_bind_getCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@color/white"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:text="获取验证码"
            android:textColor="@color/selector_tabtext"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/id_bind_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/id_bind_getCode"
            android:background="@color/white"
            android:hint="请输入验证码"
            android:inputType="text"
            android:paddingBottom="10dp"
            android:paddingLeft="4dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:textColor="@color/textColor1"
            android:textColorHint="@color/defultTextColor"
            android:textSize="12sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/id_bind_bind"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_login_bt"
        android:gravity="center"
        android:text="立即绑定"
        android:textColor="@color/white"
        android:textSize="14sp" />

</LinearLayout>