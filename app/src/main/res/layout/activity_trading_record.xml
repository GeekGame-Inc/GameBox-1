<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar"></include>

    <android.support.design.widget.TabLayout
        android:id="@+id/id_trading_record_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/border_bottom"
        app:tabIndicatorColor="@color/blue"
        app:tabSelectedTextColor="@color/blue"
        app:tabTextAppearance="@style/TabLayoutTextSizeStyle"
        app:tabTextColor="@color/gray_69"></android.support.design.widget.TabLayout>

    <com.tenone.gamebox.view.custom.NoScrollViewPager
        android:id="@+id/id_trading_record_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.tenone.gamebox.view.custom.NoScrollViewPager>

</LinearLayout>
