<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/id_noButtonGame_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/empty"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/id_noButtonGame_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/id_noButtonGame_img"
        android:layout_alignRight="@id/id_noButtonGame_img"
        android:layout_below="@id/id_noButtonGame_img"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/gray_69"
        android:textSize="11sp" />

</RelativeLayout>