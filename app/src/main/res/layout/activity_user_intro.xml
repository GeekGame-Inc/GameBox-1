<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">


        <com.tenone.gamebox.view.custom.CustomizeEditText
            android:id="@+id/id_userIntro_edit"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/radiu_border"
            android:gravity="left|top"
            android:hint="请输入个人简介"
            android:maxLength="30"
            android:padding="5dp"
            android:textColor="@color/black_33"
            android:textColorHint="@color/gray_9a"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/id_userIntro_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/id_userIntro_edit"
            android:layout_below="@id/id_userIntro_edit"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="编辑你的个性简介，不超过30个字" />

        <TextView
            android:id="@+id/id_userIntro_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/id_userIntro_edit"
            android:layout_below="@id/id_userIntro_edit"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:text="0/30"
            android:textColor="@color/defultTextColor"
            android:textSize="12sp" />

    </RelativeLayout>
</LinearLayout>
