<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/id_fragment_question_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.tenone.gamebox.view.custom.LoadMoreRecyclerView
                android:id="@+id/id_fragment_question_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></com.tenone.gamebox.view.custom.LoadMoreRecyclerView>

            <ImageView
                android:id="@+id/id_empty_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/x_icon_tu"
                android:visibility="gone" />
        </RelativeLayout>


    </android.support.v4.widget.SwipeRefreshLayout>


</RelativeLayout>
