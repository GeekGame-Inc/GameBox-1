<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/id_notification_openServicer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_tongzhi"
        android:drawableRight="@drawable/icon_right_next"
        android:gravity="center_vertical|left"
        android:padding="20dp"
        android:text="@string/openServerRemind"
        android:textColor="@color/black"
        android:textSize="14sp" 
        android:drawablePadding="5dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line0" />

    <TextView
        android:drawablePadding="5dp"
        android:id="@+id/id_notification_systemNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_xiaoxitongzhi"
        android:drawableRight="@drawable/icon_right_next"
        android:gravity="center_vertical|left"
        android:padding="20dp"
        android:text="@string/systemNotificaiton"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line0" />

</LinearLayout>