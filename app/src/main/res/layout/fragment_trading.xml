<?xml version="1.0" encoding="utf-8"?>


<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/id_trading_appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/id_trading_collapsingToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:collapsedTitleGravity="center_vertical|start"
            app:contentScrim="@color/white"
            app:expandedTitleGravity="left"
            app:expandedTitleTextAppearance="@style/transparentText"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="54dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/id_trading_xzImg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/c_icon_jiaoyixuzhi" />

                <ImageView
                    android:id="@+id/id_trading_mhImg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/c_icon_woyaomaihao" />

                <ImageView
                    android:id="@+id/id_trading_jlImg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/c_icon_jiaoyijilu" />

                <ImageView
                    android:id="@+id/id_trading_kfImg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/c_icon_lianxikefu" />

            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/id_trading_toolbar"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/border_bottom"
                android:descendantFocusability="blocksDescendants"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin"
                app:navigationIcon="@null"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                <TextView
                    android:id="@+id/id_trading_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:scrollHorizontally="true"
                    android:text="账号交易"
                    android:textColor="@color/gray_69"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/id_trading_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical|end"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:scrollHorizontally="true"
                    android:text="交易登录"
                    android:textColor="@color/gray_69"
                    android:textSize="15sp" />

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>

        <RelativeLayout
            android:id="@+id/id_trading_conditionsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/id_trading_xzTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="交易须知"
                    android:textColor="@color/black_33"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/id_trading_mhTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="我要卖号"
                    android:textColor="@color/black_33"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/id_trading_jlTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="交易记录"
                    android:textColor="@color/black_33"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/id_trading_kfTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="联系客服"
                    android:textColor="@color/black_33"
                    android:textSize="13sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_below="@id/linearLayout"
                android:background="@drawable/border_bottom">

                <TextView
                    android:id="@+id/id_trading_conditions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawablePadding="2dp"
                    android:drawableRight="@drawable/selector_up_down_trading"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="最新发布"
                    android:textColor="@color/black_33"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/line"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/id_trading_conditions"
                    android:background="@color/divider"></View>

                <TextView
                    android:id="@+id/id_trading_platform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/line"
                    android:drawablePadding="2dp"
                    android:drawableRight="@drawable/selector_up_down_trading"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="不限"
                    android:textColor="@color/black_33"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/line1"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/id_trading_platform"
                    android:background="@color/divider"></View>

                <RelativeLayout
                    android:id="@+id/id_trading_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/line1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/id_t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="选择游戏:"
                        android:textColor="@color/black_33"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/id_trading_game"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/id_t"
                        android:background="@drawable/radius_border_kf"
                        android:ellipsize="marquee"
                        android:gravity="center"
                        android:maxEms="6"
                        android:paddingBottom="1dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:paddingTop="1dp"
                        android:singleLine="true"
                        android:text="全部"
                        android:textColor="@color/blue_40"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/id_trading_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_toRightOf="@id/id_trading_game"
                        android:src="@drawable/icon_edit_delete"
                        android:visibility="gone" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/id_trading_clear"
                        android:src="@drawable/icon_jt_y" />

                </RelativeLayout>


            </RelativeLayout>

        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.SwipeRefreshLayout

        android:id="@+id/id_trading_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:addStatesFromChildren="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.tenone.gamebox.view.custom.CustomerLoadMoreRecyclerView
            android:id="@+id/id_trading_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"></com.tenone.gamebox.view.custom.CustomerLoadMoreRecyclerView>

    </android.support.v4.widget.SwipeRefreshLayout>
</android.support.design.widget.CoordinatorLayout>