<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/comm_search_titlebar" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="@string/hotSearch"
                android:textColor="@color/black_33"
                android:textSize="16sp" />


            <com.tenone.gamebox.view.custom.MyGridView
                android:id="@+id/id_gameSearch_gridViewTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="@color/white"
                android:horizontalSpacing="10dp"
                android:listSelector="@color/transparent"
                android:numColumns="4"
                android:padding="10dp"
                android:scrollbars="none"></com.tenone.gamebox.view.custom.MyGridView>


            <com.tenone.gamebox.view.custom.MyGridView
                android:id="@+id/id_gameSearch_gridViewBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="@color/white"
                android:horizontalSpacing="10dp"
                android:listSelector="@color/transparent"
                android:numColumns="4"
                android:padding="10dp"
                android:scrollbars="none"
                android:verticalSpacing="10dp"></com.tenone.gamebox.view.custom.MyGridView>

            <com.tenone.gamebox.view.custom.MyListView
                android:id="@+id/id_gameSearch_listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:cacheColorHint="@color/white"
                android:divider="@null"
                android:listSelector="@color/white"></com.tenone.gamebox.view.custom.MyListView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>