<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tabHostGame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/id_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TabLayout
            android:id="@+id/id_new_game_tabLayout"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:tabIndicatorColor="@color/blue"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/blue"
            app:tabTextAppearance="@style/IndexTabLayoutTextSizeStyle"
            app:tabTextColor="@color/gray_69"></android.support.design.widget.TabLayout>


        <ImageView
            android:id="@+id/id_new_game_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:padding="2dp"
            android:src="@drawable/ic_message" />

        <ImageView
            android:padding="2dp"
            android:id="@+id/id_new_game_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/id_new_game_message"
            android:src="@drawable/ic_xiazai" />


        <ImageView
            android:id="@+id/id_new_game_iv1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/id_new_game_iv2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/id_new_game_iv1" />
    </RelativeLayout>


    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_below="@id/id_layout1"
        android:background="@color/divider" />

    <android.support.v4.view.ViewPager
        android:id="@+id/id_new_game_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line1" />


    <ImageView
        android:id="@+id/id_new_game_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="12dp"
        android:src="@drawable/icon_task" />
</RelativeLayout>