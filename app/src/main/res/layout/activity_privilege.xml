<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />

    <com.tenone.gamebox.view.custom.RefreshLayout
        android:id="@+id/id_privlege_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tenone.gamebox.view.custom.MyRefreshListView
            android:id="@+id/id_privlege_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@color/white"
            android:divider="@null"
            android:listSelector="@color/transparent"
            android:scrollbars="none"></com.tenone.gamebox.view.custom.MyRefreshListView>
    </com.tenone.gamebox.view.custom.RefreshLayout>


</LinearLayout>