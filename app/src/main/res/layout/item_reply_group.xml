<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_reply_group_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants" >

    <TextView
        android:id="@+id/id_reply_group_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/id_reply_group_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_reply_group_title"
        android:layout_marginLeft="28dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/id_reply_gruop_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/id_reply_group_content"
        android:layout_below="@id/id_reply_group_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/empty"
        android:maxHeight="120dp"
        android:maxWidth="120dp" />

    <TextView
        android:id="@+id/id_reply_group_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/id_reply_gruop_img"
        android:layout_below="@id/id_reply_gruop_img"
        android:padding="10dp"
        android:textColor="@color/defultTextColor"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/id_reply_group_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/id_reply_group_time"
        android:layout_alignParentRight="true"
        android:layout_below="@id/id_reply_gruop_img"
        android:padding="10dp"
        android:text="更多"
        android:textColor="@color/red"
        android:textSize="14sp"
        android:visibility="gone" />

</RelativeLayout>