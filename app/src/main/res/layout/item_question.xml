<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp">

    <ImageView
        android:id="@+id/id_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/e_icon_wen" />

    <TextView
        android:id="@+id/id_item_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/id_icon"
        android:layout_marginStart="5dp"
        android:layout_toRightOf="@id/id_icon"
        android:textColor="@color/textColor1"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/id_item_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/id_item_question"
        android:background="@drawable/shape_login_bt"
        android:drawableLeft="@drawable/f_icon_jinbin_liang"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:paddingTop="2dp"
        android:text="+50"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/id_item_question"
        android:layout_below="@id/id_item_question"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_gray_f2"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/id_item_answerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        <TextView
            android:id="@+id/id_item_answerNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_item_answerLayout"
            android:text="查看全部1个回答"
            android:textColor="@color/defultTextColor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/id_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/id_item_answerLayout"
            android:textColor="@color/defultTextColor"
            android:textSize="12sp" />

    </RelativeLayout>

</RelativeLayout>
