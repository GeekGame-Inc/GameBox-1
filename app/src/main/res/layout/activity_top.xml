<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />


    <TextView
        android:id="@+id/id_top_numTv"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:background="@color/lineBg"
        android:gravity="center"
        android:textColor="@color/rebateColor"
        android:textSize="13sp" />

    <com.tenone.gamebox.view.custom.viewpagerindicator.TabPageIndicator
        android:id="@+id/id_top_tabPageIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.tenone.gamebox.view.custom.CustomerUnderlinePageIndicator
        android:id="@+id/id_top_underlineIndicator"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider" />


    <android.support.v4.view.ViewPager
        android:id="@+id/id_top_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>