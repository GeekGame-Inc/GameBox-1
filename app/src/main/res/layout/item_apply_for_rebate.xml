<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/id_apply_for_rebate_gamename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="@color/gray_69"
        android:textSize="14sp" />

    <Button
        android:id="@+id/id_apply_for_rebate_button"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:background="@drawable/radius_border_kf"
        android:gravity="center"
        android:text="申请"
        android:textColor="@drawable/selector_rebate_item_text"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_apply_for_rebate_gamename"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@id/id_apply_for_rebate_button"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_apply_for_rebate_gameserver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/gray_69"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/id_apply_for_rebate_gamerolename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/gray_69"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/id_apply_for_rebate_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/gray_69"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>