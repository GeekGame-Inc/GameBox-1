<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include layout="@layout/common_title_bar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.tenone.gamebox.view.custom.RefreshLayout
            android:id="@+id/id_gameGift_refresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.tenone.gamebox.view.custom.MyRefreshListView
                android:id="@+id/id_gameGift_listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="@color/white"
                android:divider="@color/divider"
                android:dividerHeight="1dp"
                android:listSelector="@color/transparent" />
        </com.tenone.gamebox.view.custom.RefreshLayout>

        <LinearLayout
            android:id="@+id/id_gameGift_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dbd8"
            android:orientation="vertical"
            android:padding="2dp"
            android:visibility="invisible" >

            <com.tenone.gamebox.view.custom.CustomizeEditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:background="@drawable/radiu_border"
                android:drawableLeft="@drawable/ic_star_nocheck"
                android:focusable="false"
                android:padding="10dp"
                android:textColorHint="@color/defultTextColor" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>