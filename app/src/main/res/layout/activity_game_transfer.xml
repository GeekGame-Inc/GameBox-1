<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/common_title_bar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/divider"
        android:gravity="center"
        android:padding="6dp"
        android:text="*申请转游请先点右上角查看转游帮助或者联系客服"
        android:textColor="@color/blue_40"
        android:textSize="11sp" />

    <com.tenone.gamebox.view.custom.viewpagerindicator.TabPageIndicator
        android:id="@+id/id_transfer_tabPageIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.tenone.gamebox.view.custom.CustomerUnderlinePageIndicator
        android:id="@+id/id_transfer_underlineIndicator"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

    <android.support.v4.view.ViewPager
        android:id="@+id/id_transfer_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>