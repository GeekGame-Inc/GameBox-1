<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="afterDescendants"
    android:orientation="vertical"
    android:padding="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tenone.gamebox.view.custom.CircleImageView
            android:id="@+id/id_item_for_me_header"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            app:border_color="@color/rebateColor"
            app:border_width="1dp" />

        <RelativeLayout
            android:id="@+id/id_item_for_me_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/id_item_for_me_header"
            android:layout_alignTop="@id/id_item_for_me_header"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/id_item_for_me_header"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/id_item_for_me_nicktv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLength="16"
                android:textColor="@color/titleBarColor"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/id_item_for_me_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_item_for_me_nicktv"
                android:layout_marginTop="10dp"
                android:textColor="@color/defultTextColor"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/id_item_for_me_sexIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/id_item_for_me_nicktv"
                android:layout_alignTop="@id/id_item_for_me_nicktv"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/id_item_for_me_nicktv"
                android:background="@drawable/selector_sex"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/id_item_for_me_vipIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/id_item_for_me_sexIv"
                android:background="@drawable/icon_dynamic_vip" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/id_item_for_me_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/id_item_for_me_header"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/id_item_for_me_nicktv"
        android:textColor="@color/titleBarColor"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_linebg"
        android:padding="10dp">

        <TextView
            android:id="@+id/id_item_for_me_dynamic_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/titleBarColor"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/id_item_for_me_dynamicIv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/id_item_for_me_dynamic_textview"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/id_item_for_me_dynamicIv"
            android:layout_alignTop="@id/id_item_for_me_dynamicIv"
            android:layout_below="@id/id_item_for_me_dynamic_textview"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/id_item_for_me_dynamicIv"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/id_item_for_me_dynamic_nickTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/titleBarColor"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/id_item_for_me_dynamic_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/defultTextColor"
                android:textSize="12sp" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
